<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/jet"
    tools:context=".ScoringActivity">

    <TextView
        android:id="@+id/team_info_display"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:textAlignment="center"
        android:textSize="25sp"
        android:text="NULL"
        android:layout_marginLeft="15sp"
        android:layout_marginTop="15sp"
        android:textColor="@color/fontPrimary"/>

        <LinearLayout
            android:id="@+id/score_tracker_panel"
            android:layout_below="@id/team_info_display"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10sp"
            android:weightSum="1"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/hatch_counter"
                android:layout_weight="1"
                android:weightSum="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="50dp"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/decrementHatch"
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_weight=".33"
                    android:background="@mipmap/ic_down"/>
                <LinearLayout
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_weight=".33"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="70sp"
                        android:layout_weight="1"
                        android:src="@mipmap/ic_hatch"/>
                    <TextView
                        android:id="@+id/hatch_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textColor="@color/fontPrimary"
                        android:text="0"
                        android:textSize="30sp"/>
                </LinearLayout>
                <Button
                    android:id="@+id/incrementHatch"
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.33"
                    android:background="@mipmap/ic_up"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/cargo_counter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="50sp"
                android:layout_marginTop="20sp"
                android:weightSum="1"
                android:layout_weight="1"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/decrementCargo"
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.33"
                    android:background="@mipmap/ic_down" />
                <LinearLayout
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.33"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="70sp"
                        android:layout_weight="1"
                        android:src="@mipmap/ic_cargo"/>
                    <TextView
                        android:id="@+id/cargo_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textColor="@color/fontPrimary"
                        android:text="0"
                        android:textSize="30sp"/>
                </LinearLayout>
                <Button
                    android:id="@+id/incrementCargo"
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.33"
                    android:background="@mipmap/ic_up"/>

            </LinearLayout>
        </LinearLayout>

        <!-- Vertical LinearLayout of image buttons (show the rocket)
        Same type of approach for cargo holder-->
        <LinearLayout
            android:id="@+id/climb_input"
            android:layout_below="@id/score_tracker_panel"
            android:weightSum="1"
            android:layout_centerHorizontal="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10sp"
            android:layout_marginHorizontal="10sp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="22sp"
                android:layout_marginTop="10sp"
                android:textColor="@color/fontPrimary"
                android:layout_gravity="center"
                android:textAllCaps="true"
                android:layout_weight="0.25"
                android:text="Climb Level"/>

            <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="15sp"
                android:layout_weight="0.25"
                android:weightSum="4"
                android:layout_gravity="center"
                android:orientation="horizontal">
                <RadioButton android:id="@+id/climb_0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Lvl 0"
                    android:textSize="22sp"
                    android:textColor="@color/fontPrimary"
                    android:layout_margin="15sp" />
                <RadioButton android:id="@+id/climb_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Lvl 1"
                    android:textSize="22sp"
                    android:textColor="@color/fontPrimary"
                    android:layout_margin="15sp" />
                <RadioButton android:id="@+id/climb_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="15sp"
                    android:layout_weight="1"
                    android:text="Lvl 2"
                    android:textSize="22sp"
                    android:textColor="@color/fontPrimary"/>
                <RadioButton android:id="@+id/climb_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="15sp"
                    android:layout_weight="1"
                    android:text="Lvl 3"
                    android:textSize="22sp"
                    android:textColor="@color/fontPrimary"/>
            </RadioGroup>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Penalties"
                android:layout_weight="0.25"
                android:textAllCaps="true"
                android:textColor="@color/fontPrimary"
                android:layout_gravity="center"
                android:textSize="22sp"/>
            <LinearLayout
                android:id="@+id/penaltyInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="5"
                android:layout_weight="0.25"
                android:layout_marginTop="15sp"
                android:layout_marginLeft="5sp"
                android:layout_marginRight="5sp">

                <CheckBox
                    android:id="@+id/pinning_chk"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Pinning"
                    android:textColor="@color/fontPrimary"
                    android:textSize="20sp"
                    android:layout_weight="1"/>
                <CheckBox
                    android:id="@+id/descore_chk"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Descore"
                    android:textColor="@color/fontPrimary"
                    android:textSize="20sp"
                    android:layout_weight="1"/>
                <CheckBox
                    android:id="@+id/extension_chk"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textColor="@color/fontPrimary"
                    android:textSize="20sp"
                    android:text="Extends"
                    android:layout_weight="1"/>
                <CheckBox
                    android:id="@+id/yellow_chk"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Yellow Card"
                    android:textColor="@color/fontPrimary"
                    android:textSize="20sp"
                    android:layout_weight="1"/>
                <CheckBox
                    android:id="@+id/red_chk"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Red Card"
                    android:textColor="@color/fontPrimary"
                    android:textSize="20sp"
                    android:layout_weight="1"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/bottom_bar"
            android:layout_centerHorizontal="true"
            android:orientation="vertical">

            <EditText
                android:id="@+id/description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20sp"
                android:textColor="@color/fontPrimary"
                android:layout_gravity="center"
                android:hint="Notes"
                android:textSize="35sp"/>
        </LinearLayout>




    <LinearLayout
        android:id="@+id/bottom_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50sp"
        android:layout_alignParentBottom="true"
        android:background="@color/greySecondary">

        <Button
            android:id="@+id/back_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20sp"
            android:layout_weight="1"
            android:text="back"
            android:textSize="35sp"
            android:textAllCaps="true"
            android:textColor="@color/fontPrimary"
            android:background="@color/colorPrimaryDark" />
        <Button
            android:id="@+id/submit_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20sp"
            android:layout_weight="1"
            android:text="submit"
            android:textSize="35sp"
            android:textAllCaps="true"
            android:textColor="@color/fontPrimary"
            android:background="@color/greenSecondary" />
    </LinearLayout>
</RelativeLayout>